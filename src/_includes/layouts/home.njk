---
layout: "layouts/base.njk"
---

<div class="home-container">
  {% if image %}
    <img src="{{ image }}" alt="Lorenzo Orsenigo" class="home-hero-image">
    {% else %}
      <!-- Fallback / Placeholder -->
      <div class="home-hero-placeholder" style="width: 100%; height: 100%; background: #ccc;"></div>
    {% endif %}
    {% if showName %}
      <h1 class="home-title">Lorenzo Orsenigo</h1>
    {% endif %}
  </div>
  <style>
    .home-container {
      height: 100vh; /* Full viewport */
      width: 100%;
      position: relative;
      overflow: hidden;
      margin-top: calc(var(--nav-height) * -1); /* Overlap header */
    }
    .home-hero-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: center;
    }
    .home-title {
      position: absolute;
      bottom: var(--size-l);
      left: var(--size-l);
      font-size: var(--size-xxl);
      color: white; /* Assuming dark image */
      text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
      margin: 0;
    }
    .home-hero-placeholder {
      width: 100%;
      height: 100%;
      background-color: #ccc;
    }
  </style>