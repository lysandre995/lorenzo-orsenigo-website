{% set ogImage = image or "/assets/img/cover.jpeg" %}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title | default("Lorenzo Orsenigo – Percussionist & Researcher") }}</title>
    <meta name="description" content="{{ description | default("Official site of Lorenzo Orsenigo – percussionist, performer and researcher in contemporary and experimental music.") }}">
    <meta name="author" content="Lorenzo Orsenigo">
    <link
    rel="canonical" href="https://lorenzoorsenigo.com{{ page.url }}"> <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://lorenzoorsenigo.com{{ page.url }}">
    <meta property="og:title" content="{{ title | default("Lorenzo Orsenigo – Percussionist & Researcher") }}">
    <meta property="og:description" content="{{ description | default("Official site of Lorenzo Orsenigo – percussionist, performer and researcher in contemporary and experimental music.") }}">
    <meta property="og:image" content="https://lorenzoorsenigo.com{{ ogImage }}">
    <link rel="icon" type="image/x-icon" href="/assets/img/favicon.ico">
    <link rel="shortcut icon" type="image/x-icon" href="/assets/img/favicon.ico">
    <link rel="stylesheet" href="/assets/css/main.css">
    <script src="https://unpkg.com/@phosphor-icons/web"></script>
  </head>
  <body>
    <div class="site-wrapper">
      <header class="site-header">
        <div class="site-logo">
          <a href="/">Lorenzo Orsenigo</a>
        </div>
        <nav class="site-nav">
          <ul>
            <li><a href="/bio/">Bio</a></li>
            <li><a href="/events/">Events</a></li>
            <li><a href="/projects/">Projects</a></li>
          </ul>
        </nav>
      </header>
      <main class="site-main">
        {% if page.url != "/" and page.url != "/404.html" %}
          {% include "components/breadcrumb.njk" %}
        {% endif %}
        {{ content | safe }}
      </main>
      <footer class="site-footer">
        <div class="contact-info">
          <a href="https://instagram.com/lorso_percussion" target="_blank" rel="noopener noreferrer" aria-label="Instagram">
            <i class="ph ph-instagram-logo"></i>
          </a>
          <a
            href="https://www.youtube.com/channel/UCSELABk7HStKmOlyKvCeBrA"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="YouTube">
            <i class="ph ph-youtube-logo"></i>
          </a>
          <a href="mailto:info@lorenzoorsenigo.com" aria-label="Email">
            <i class="ph ph-envelope-simple"></i>
          </a>
        </div>
        <div class="credits">
          <p>&copy; 2026 Lorenzo Orsenigo. Site by
            <a href="https://alessandroalfano.com" target="_blank" rel="noopener noreferrer">Alessandro Alfano</a>.</p>
        </div>
      </footer>
    </div>
    <!-- Schema.org Structured Data -->
    <script type="application/ld+json">
      { "@context": "https://schema.org", "@type": "Person", "name": "Lorenzo Orsenigo", "url": "https://lorenzoorsenigo.com",
      "image": "https://lorenzoorsenigo.com/assets/img/Bio_Updated_compressed.jpg", "description": "percussionist, performer and researcher in contemporary and experimental music.", "sameAs": [
      "https://www.youtube.com/channel/UCSELABk7HStKmOlyKvCeBrA", "https://instagram.com/lorso_percussion" ], "contactPoint":
      { "@type": "ContactPoint", "contactType": "Email", "email": "info@lorenzoorsenigo.com" }, "jobTitle": ["Percussionist", "Researcher"] }
    </script>
  </body>
</html>